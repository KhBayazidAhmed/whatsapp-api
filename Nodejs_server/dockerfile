# Stage 1: Build stage
FROM node:18-alpine AS builder

# Set the working directory
WORKDIR /app

# Set environment variable to skip Chromium download during build
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci

# Copy the rest of the application files
COPY . .

# Compile TypeScript to JavaScript
RUN npm run build

# Stage 2: Production stage
FROM ubuntu:20.04 as production

# Install Chromium dependencies and Chromium
RUN apk add --no-cache \
    gconf libgbm libasound2 libcairo libgdk-pixbuf libatk libcups libdbus \
    libexpat libfontconfig libgcc libgconf-2 libglib libgtk-3 libnspr \
    libpango libx11 libxcb libxcomposite libxcursor libxdamage libxext \
    libxi libxrandr libxrender libxss libxtst ca-certificates \
    chromium nss

# Set Puppeteer executable path to the locally installed Chromium
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Set the working directory
WORKDIR /app

# Copy necessary files from the build stage
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/dist ./dist

# Install production dependencies only
RUN npm ci --only=production

# Expose the application's port (optional, adjust if needed)
EXPOSE 3000

# Start the application
CMD ["node", "dist/index.js"]
